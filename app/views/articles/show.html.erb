<h1><%= @article.title %></h1>

  	<p><b><%= @article.atext %></b></p>

   	<br />
  	<br />

  	<h3><%= t('comments.c_head') %></h3>
		<% @article.comments.each do |comment| %>
			<p>
			 <i><%= comment.author %> said :</i>
			<%= comment.body %>
			</p>
	  	<% end %>

   	<br />
  	<br />


	<h3><%= t('comments.add') %></h3>
		<%= form_for ([@article, @article.comments.build]) do |f| %>
		<p>
			<%= f.label :author %><br />
			<%= f.text_field :author %>
		</p>

		<p>
			<%= f.label :body %><br />
			<%= f.text_area :body %>
		</p>

		<p>
			<%= f.submit %><br />
		</p>

		<% end %>
