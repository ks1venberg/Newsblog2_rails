<h1><%= t('articles.list') %></h1>

<% @articles.each do |article| %>
  
  <div class="container">
    <div class="row">
      <h2><%= article.title %></h2>
        </div>
    <div class="row">
      <p><%= article.atext %></p>
        </div>

  <p>
    <%= link_to 'Show', article_path(article) %> | 
    <%= link_to 'Edit', edit_article_path(article) %> | 
    <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?'} %>
  </p>

	   <hr/>
  </div>
<% end %>

